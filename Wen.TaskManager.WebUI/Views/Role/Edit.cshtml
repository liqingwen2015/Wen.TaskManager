@model Wen.TaskManager.WebUI.Models.RoleEditViewModel

@{
    ViewBag.Title = "Index";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            首页
            <small></small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Tables</a></li>
            <li class="active">Simple</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box">
                    <div class="box-header with-border">
                        <h3 class="box-title">Horizontal Form</h3>
                    </div>
                    <!-- /.box-header -->
                    @using (Html.BeginForm("Edit", "Role", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        @Html.HiddenFor(x=>x.RoleId)
                        <div class="box-body">
                            <div class="form-group">
                                <label for="" class="col-sm-1 control-label">角色名称</label>

                                <div class="col-sm-6">
                                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = Model.Name })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-1 control-label">角色</label>
                                <div class="col-sm-6">
                                    <div class="checkbox">
                                        @if (Model.Menus != null)
                                        {
                                            foreach (var menu in Model.Menus)
                                            {
                                                <label>
                                                    @if (Model.MenuIds == null || !Model.MenuIds.Contains(menu.Id))
                                                    {
                                                        <input name="MenuIds" type="checkbox" value="@menu.Id" />
                                                        @menu.Name
                                                    }
                                                    else
                                                    {
                                                        <input name="MenuIds" type="checkbox" value="@menu.Id" checked="checked" />
                                                        @menu.Name
                                                    }
                                                </label>
                                            }
                                        }
                                    </div>
                                </div>
                            </div>

                        </div>
                        <!-- /.box-body -->
                        <div class="box-footer">
                            @*<button type="submit" class="btn btn-default">Cancel</button>*@
                            <button type="submit" class="btn btn-info pull-right">保存</button>
                        </div>
                            <!-- /.box-footer -->
                    }
                    <!-- /.box-body -->

                </div>
            </div>
        </div>
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->