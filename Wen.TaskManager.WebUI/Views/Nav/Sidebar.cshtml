@model Wen.TaskManager.WebUI.Models.NavSidebarViewModel

<aside class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
        <!-- Sidebar user panel (optional) -->
        <div class="user-panel">
            <div class="pull-left image">
                <img src="~/Content/AdminLTE/dist/img/user2-160x160.jpg" class="img-circle" alt="User Image">
            </div>
            <div class="pull-left info">
                <p>Alexander Pierce</p>
                <!-- Status -->
                <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
            </div>
        </div>
        <!-- search form (Optional) -->
        <form action="#" method="get" class="sidebar-form">
            <div class="input-group">
                <input type="text" name="q" class="form-control" placeholder="Search...">
                <span class="input-group-btn">
                    <button type="submit" name="search" id="search-btn" class="btn btn-flat">
                        <i class="fa fa-search"></i>
                    </button>
                </span>
            </div>
        </form>
        <!-- /.search form -->
        <!-- Sidebar Menu -->
        <ul class="sidebar-menu">
            <li class="">首页</li>
            <!-- Optionally, you can add icons to the links -->
            @*<li class="active"><a href="#"><i class="fa fa-link"></i> <span>@Model.LinkName</span></a></li>
                <li><a href="#"><i class="fa fa-link"></i> <span>@Model.LinkName</span></a></li>
                <li><a href="#"><i class="fa fa-link"></i> <span>@Model.LinkName</span></a></li>
                <li><a href="#"><i class="fa fa-link"></i> <span>@Model.LinkName</span></a></li>*@
            @foreach (var menu in Model.Menus.Where(x => x.ParentId == 0))
            {
                if (Model.Menus.Count(x => x.ParentId == menu.Id) > 0)
                {
                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-link"></i> <span>@menu.Name</span>
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            @foreach (var subMenu in Model.Menus.Where(x => x.ParentId == menu.Id))
                            {
                                <li><a href="@subMenu.Url">@subMenu.Name</a></li>
                            }
                        </ul>
                    </li>
                }
                else
                {
                    <li class=""><a href="@menu.Url"><i class="fa fa-link"></i> <span>@menu.Name</span></a></li>
                }
            }

        </ul>
        <!-- /.sidebar-menu -->
    </section>
    <!-- /.sidebar -->
</aside>
